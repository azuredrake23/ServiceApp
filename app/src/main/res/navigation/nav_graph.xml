<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/main_fragment">

    <fragment
        android:id="@+id/main_fragment"
        android:name="com.example.serviceapp.ui.fragments.MainFragment"
        android:label="@string/app_name"
        tools:layout="@layout/main_fragment">
        <argument
            android:name="userName"
            app:argType="string"
            app:nullable="true"
            android:defaultValue='null' />
        <argument
            android:name="userEmail"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="null" />
        <argument
            android:name="userPassword"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="null" />
        <argument
            android:name="userState"
            app:argType="boolean"
            android:defaultValue="false" />
        <action
            android:id="@+id/action_go_to_settings"
            app:destination="@id/settings_fragment" />
        <action
            android:id="@+id/action_go_to_add_employee"
            app:destination="@id/add_service_fragment" />
        <action
            android:id="@+id/action_main_fragment_to_loginFragment"
            app:destination="@id/login_fragment" />
        <action
            android:id="@+id/action_main_fragment_to_account_fragment"
            app:destination="@id/account_fragment" />
    </fragment>

    <fragment
        android:id="@+id/add_service_fragment"
        android:name="com.example.serviceapp.ui.fragments.AddServiceFragment"
        android:label="@string/app_name"
        tools:layout="@layout/add_service_fragment"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim">
    </fragment>

    <fragment
        android:id="@+id/settings_fragment"
        android:name="com.example.serviceapp.ui.settings.SettingsFragment"
        android:label="@string/settings"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    <fragment
        android:id="@+id/login_fragment"
        android:name="com.example.serviceapp.ui.fragments.registration.LoginFragment"
        android:label="@string/app_name"
        tools:layout="@layout/login_fragment"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim">
        <action
            android:id="@+id/action_login_fragment_to_register_fragment"
            app:destination="@id/register_fragment" />
        <action
            android:id="@+id/action_login_fragment_to_main_fragment"
            app:destination="@id/main_fragment" />
    </fragment>

    <fragment
        android:id="@+id/account_fragment"
        android:name="com.example.serviceapp.ui.fragments.AccountFragment"
        android:label="@string/account"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim">
        <argument
            android:name="userName"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/register_fragment"
        android:name="com.example.serviceapp.ui.fragments.registration.RegisterFragment"
        android:label="@string/app_name"
        tools:layout="@layout/register_fragment"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim"/>

</navigation>